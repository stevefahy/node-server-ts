{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",

    "lib": ["es6"],
    "allowJs": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./dist/**/*"]
}
